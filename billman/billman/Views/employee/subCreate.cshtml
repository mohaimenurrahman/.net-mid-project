@model billman.Models.Database.subscription
@{
    ViewBag.Title = "subCreate";
    Layout = "~/Views/Shared/_employeelogins.cshtml";
}

<h2>subCreate</h2>
<div class="content" style="margin-left:300px;">
    <br />
    <a class="btn btn-info" style="margin-left:980px;" href="/employee/subList">Show List</a>
    <h3>ADD SUBSCRIPTION</h3>
    <form action="/employee/subCreate" method="post">

        <label>User Name : </label><input type="text" name="username" value="@Model.username" placeholder="User Name" class="form-control" />
        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })

        <label>Payment Status: </label><input type="text" name="paymentstatus" value="@Model.paymentstatus" placeholder="Payment Status" class="form-control" />
        @Html.ValidationMessageFor(model => model.paymentstatus, "", new { @class = "text-danger" })

       <label>Date Of Payment : </label><input type="text" name="DOP" value="@Model.DOP" placeholder="Date Of Payment" class="form-control" />
        @Html.ValidationMessageFor(model => model.DOP, "", new { @class = "text-danger" })

        <input class="btn btn-danger" type="submit" value="ADD" />

    </form>
</div>

