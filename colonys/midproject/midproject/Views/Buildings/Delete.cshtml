
@{
    ViewBag.Title = "Delete";
}

<br /><button type="button" class="btn btn-primary btn-lg btn-block"><h2><b>Delete</b></h2></button>

<form action="/Buildings/Delete" method="post">

    <input type="text" name="colonyCode" value="@Model.colonyCode" placeholder="COLONY CODE" class="form-control" />
    <input type="text" name="username" value="@Model.username" placeholder="USERNAME" class="form-control" />
    <input type="text" name="buildingName" value="@Model.buildingName" placeholder="BUILDING NAME" class="form-control" />
    <input type="text" name="buildingCode" value="@Model.buildingCode" placeholder="BUILDING CODE" class="form-control" />

    <input type="submit" value="Delete" />

</form>
